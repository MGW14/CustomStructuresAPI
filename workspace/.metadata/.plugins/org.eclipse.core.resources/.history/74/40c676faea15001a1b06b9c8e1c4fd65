package work.mgnet.customstructuresapi.manager;

import org.bukkit.Location;
import org.bukkit.Material;

public class BlockLocation {
	
	public int x; // Offset X Location
	public int y; // Offest Y Location
	public int z; // Offset Z Location
	public Material mat; // Offset Material Location. What? xD
	
	// Yes. this is the Constructor. Who could have known...
	public BlockLocation(int x, int y, int z, Material mat) {
		super();
		this.x = x;
		this.y = y;
		this.z = z;
		this.mat = mat;
	}
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	public int getZ() {
		return z;
	}
	public Material getMat() {
		return mat;
	}
	
	public Location getLoc(Location loc) {
		return new Location(loc.getWorld(), loc.getX() + x, loc.getY() + y, loc.getZ() + z);
	}
	
}
